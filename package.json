  "bugs": {
    "url": "https://github.com/MarekDrag/Eatly-v2/issues"
  },
  "devDependencies": {
    "concurrently": "^7.5.0",
    "@trivago/prettier-plugin-sort-imports": "^4.1.1"
  }
}
